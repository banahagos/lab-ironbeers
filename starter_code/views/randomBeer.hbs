<div class="random-beer-container">
  <div class="random-beer-img">
    <img src="{{image_url}}" class="card-img" alt="beer-image">
  </div>
  <div class="random-beer-text">
    <h5><b>{{name}}</b></h5>
    <p><small class="text-muted">{{tagline}}</small></p>
    <p>{{description}}</p>
    <p><b>Food Pairing</b></p>
    <ul>
      {{# each food_pairing}}
      <li>{{{this}}}</li>
      {{/each}}
    </ul>
    <p><span></span><b>Brewer Tips: </b></span>{{brewers_tips}}</p>
  </div>
</div>